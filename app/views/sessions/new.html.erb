<h1>Log in</h1>

<%= form_for :user, url: '/users' do |form| %>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <div class="form-group">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <%= form.submit 'Log in', class: 'btn btn-primary' %>
<% end %>
